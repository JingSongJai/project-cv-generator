<UserControl
    x:Class="ProjectGenerateCVWPF.Pages.ProfileUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectGenerateCVWPF.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="710"
    d:DesignWidth="1000"
    Background="Transparent"
    mc:Ignorable="d">
    <Border Background="{StaticResource displayBackground}" CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="20,0"
                VerticalAlignment="Center"
                FontFamily="{StaticResource Segoe UI}"
                FontSize="27"
                FontWeight="Bold"
                Foreground="{StaticResource btnColor1}"
                Text="Profile" />
        </Grid>
    </Border>
</UserControl>
