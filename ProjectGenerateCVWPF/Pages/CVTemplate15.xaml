<UserControl
    x:Class="ProjectGenerateCVWPF.Pages.CVTemplate15"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectGenerateCVWPF.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="424"
    Height="600"
    Background="White"
    mc:Ignorable="d">
    <Canvas>
        <Border
            Canvas.Left="30"
            Width="160"
            Height="600"
            Background="#f0f0f0" />
        <Border
            Canvas.Left="30"
            Width="160"
            Height="200"
            Background="#333333"
            CornerRadius=" 0 0 80 80" />
        <Ellipse
            Canvas.Left="40"
            Canvas.Top="50"
            Width="140"
            Height="140">
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding Profile.ImagePath}" />
            </Ellipse.Fill>
        </Ellipse>
        <Border
            Canvas.Left="30"
            Canvas.Bottom="0"
            Width="150"
            Height="300"
            Background="#333333"
            CornerRadius=" 75 75 0 0" />
    </Canvas>
</UserControl>
